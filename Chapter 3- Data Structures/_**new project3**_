#exercise 7
places = ["Paris", "Tokyo", "Italy", "Turkey","Alaska"]
print("Original Order:")
print(places)

print("Alphabetically:")
print(sorted(places))

print("Orginal Order:")
print(places)

print("Reverse:")
places.reverse()
print(places)

print("Orginal Order:")
print(places)

print("Reverse alphabatical:")
print(sorted(places , reverse=True))

print("Original order:")
print(places)

print("Reverse:")
places.reverse()
print(places)

print("Original Order:")
print(places)

print("Alphabatecially")
print(sorted(places))
print (places)

print("Reverse alphabatically")
print(sorted(places , reverse=True))

